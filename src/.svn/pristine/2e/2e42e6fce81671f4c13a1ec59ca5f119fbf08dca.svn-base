			if(this.rowExists(get)){
				Result rs = hTable.get(get);
				for(KeyValue kv : rs.list()){
					JSONObject jsonObject = JSONObject.fromObject(Bytes.toString(kv.getValue()));
					
					poiString =  jsonObject.getString("poiId");
